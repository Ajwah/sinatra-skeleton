<h1>All Messages</h1>
<hr/>

<% @messages.each do |message| %>
  <div class="message">
      <h3><a href="/messages/<%= message.id %>"><%= message.id %></a> <small>(by: <%= message.author %>)</small></h3    <p>
      <%= message.content %>
      <p></p>
      Created at: <%= message.created_at  %>
      <p></p>
      <a href="http://<%= message.url %>"> <%= message.url %></a>
    </p>
  </div>
<% end %>

<hr/>
<a href="/messages/new">Post a message... It's FREE (for now)!</a>